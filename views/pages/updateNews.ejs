<% layout('layouts/admin') %>

<div class="container mb-5 pb-5">
  <h1 class="mb-5">Создать отзыв</h1>
  <div class="row mb-4">
    <div class="col">
      <form class="w-50 mx-auto" method="POST" action="/admin/news/update?id=<%= news.id %>" enctype="multipart/form-data">
        <div class="form-group mb-4">
          <label for="title">Заголовок</label>
          <input type="text" value="<%= news.title %>" class="form-control" id="title" name="title" aria-describedby="emailHelp" placeholder="Введите заголовок">
        </div>
        <div class="form-group mb-4">
          <label for="description">Описание</label>
          <textarea type="text" rows="4" class="form-control" name="description" id="description" placeholder="Введите описание"><%= news.description %></textarea>
        </div>
        <div class="form-group mb-4">
          <p>Текущее фото</p>
          <img class="w-50" src="/uploads/news/<%= news.imageUrl %>" alt="<%= news.imageUrl %>">
        </div>
        <div class="form-group mb-4">
          <label for="imageUrl" class="form-label">Загрузите изображение</label>
          <input class="form-control" type="file" id="imageUrl" name="imageUrl">
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
      </form>
    </div>
  </div>
</div>
