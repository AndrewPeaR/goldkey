<% layout('layouts/admin') %>

<div class="container mb-5 pb-5">
  <h1 class="mb-3">Редактировать документ</h1>
  <a href="/admin/docs" class="mb-5 btn btn-primary">Все документы</a>
  <div class="row mb-4">
    <div class="col">
      <form class="w-50 mx-auto" method="POST" action="/admin/docs/update" enctype="multipart/form-data">
        <div class="form-group mb-4">
          <label for="name">Название</label>
          <input type="text" value='<%= doc.name %>' class="form-control" id="name" name="name" aria-describedby="emailHelp" placeholder="Введите название" require>
        </div>
        <div class="form-group mb-4">
          <label for="fileUrl" class="form-label">Загрузите документ</label>
          <input class="form-control" type="file" id="fileUrl" name="fileUrl" require>
        </div>
        <button type="submit" class="btn btn-primary">Обновить</button>
      </form>
    </div>
  </div>
</div>
